<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent">

    <EditText
        android:id="@+id/edt_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_eight_radius"
        android:backgroundTint="@color/edt_search_color"
        android:paddingTop="11dp"
        android:paddingBottom="11dp"
        android:paddingEnd="14dp"
        android:paddingStart="14dp"
        android:drawableStart="@drawable/ic_round_search_24"
        android:drawableTint="@color/edt_search_drawable_color"
        android:drawablePadding="14dp"
        android:hint="@string/edt_search_hint"
        android:textSize="12sp"
        android:textColorHint="@color/edt_search_drawable_color"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>